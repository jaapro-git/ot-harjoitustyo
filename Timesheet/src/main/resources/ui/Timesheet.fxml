<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:id="root" fx:controller="TimesheetFXMLController">
   <children>
      <VBox layoutX="-2.0" layoutY="-2.0" prefHeight="400.0" prefWidth="600.0" spacing="5.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ScrollPane prefHeight="376.0" prefWidth="590.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="360.0" prefWidth="584.0">
                     <children>
                        <VBox prefHeight="374.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="12.0" prefWidth="600.0">
                                 <children>
                                    <HBox prefHeight="6.0" prefWidth="600.0" spacing="5.0">
                                       <children>
                                          <Label fx:id="lblUsername" text="Username: " />
                                          <TextField fx:id="txtUsername" />
                                          <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#doLogin" text="Login" />
                                          <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#doLogout" text="Logout" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox prefHeight="350.0" prefWidth="600.0">
                                 <children>
                                    <Label fx:id="lblEntries" text="Timesheet for &lt;cUser&gt;:" />
                                    <TableView fx:id="tblEntries" prefHeight="86.0" prefWidth="600.0">
                                      <columns>
                                        <TableColumn fx:id="colId" prefWidth="39.0" text="Id" />
                                          <TableColumn fx:id="colUser" prefWidth="63.0" text="User" />
                                        <TableColumn fx:id="colComment" prefWidth="161.0" text="Comment" />
                                          <TableColumn fx:id="colComplete" prefWidth="37.0" text="Complete" />
                                          <TableColumn fx:id="colBeginStamp" prefWidth="75.0" text="Start Time" />
                                          <TableColumn fx:id="colEndStamp" prefWidth="75.0" text="End Time" />
                                          <TableColumn fx:id="colRemove" prefWidth="75.0" text="Remove" />
                                      </columns>
                                    </TableView>
                                    <Label text="Add New Entry:" />
                                    <HBox prefHeight="16.0" prefWidth="600.0" spacing="5.0">
                                       <children>
                                          <Label fx:id="lblComment" text="Comment" />
                                          <TextField fx:id="txtComment" />
                                          <Button fx:id="btnStart" mnemonicParsing="false" text="Start" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
